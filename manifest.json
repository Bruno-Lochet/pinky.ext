{
  "manifest_version": 2,
  "minimum_chrome_version": "40",
  
  "name": "Pinky",
  "version": "0.1.16",
  
  "author": "perceptron8",
  
  "short_name": "Pinky",
  "description": "Chrome extension making 'The Settlers Online' collectibles easy to find!",
  "icons": {
    "128": "icon.png"
  },
  
  "browser_action": {
    "default_icon": {
      "128": "icon.png"
    },
    "default_title": "Pinky",
    "default_popup": "popup.html"
  },
  
  "background": {
    "scripts": [
      "data.js",
      "code.js"
    ]
  },
  
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "http://static.cdn.ubi.com/"
  ]
}
